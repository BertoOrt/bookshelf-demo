<nav class="orange darken-3">
  <a href="/{{route}}/{{item.id}}" class="brand-logo">{{item.name}}</a>
  <a href="#" data-activates="sideBar" class="button-collapse right"><i class="material-icons">menu</i></a>
</nav>

<div class="container">
  <div class="row">
    <div class="col s6">
      <h5>Edit Information</h5>
      <form action="/{{route}}/edit/{{item.id}}" method="post">
        <div class="input-field col s12">
          <input type="text" name="name" value="{{item.name}}" placeholder="New Name">
          <label>Edit Name</label>
        </div>
        <div class="input-field col s12">
          <select name="id">
            <option value="">None</option>
            {{#each list}}
              <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
          <label>Add {{otherRoute}}</label>
        </div>
        <div class="input-field col s12">
          <textarea class="materialize-textarea",id="bio" name="bio" rows="8" cols="40" required>{{item.bio}}</textarea>
          <label for="bio"> Description </label>
        </div>
        <div class="input-field col s12">
          <input type="number" name="year" placeholer="year" value="{{item.year}}"required>
          <label> Year </label>
        </div>
        <button type="submit" class="btn orange accent-4">UPDATE</button>
      </form>
    </div>
    <div class="col s6">
      {{#if item.languages}}
        <h5>Remove {{otherRoute}} that this puppy knows</h5>
        {{#each item.languages}}
          <div class="row">
            <form action="/{{../route}}/delete/{{../item.id}}" method="post">
              <input type="hidden" name="id" value="{{this.id}}">
              <button type="submit" class="btn red lighten-2">REMOVE {{this.name}}</button>
            </form>
          </div>
        {{/each}}
      {{else}}
        <h5>Remove {{otherRoute}} that know this language</h5>
        {{#each item.puppies}}
          <div class="row">
            <form action="/{{../route}}/delete/{{../item.id}}" method="post">
              <input type="hidden" name="id" value="{{this.id}}">
              <button type="submit" class="btn red lighten-2">REMOVE {{this.name}}</button>
            </form>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
  <div class="row">
    <form action="/{{route}}/delete/{{item.id}}" method="post">
      <button type="submit" class="btn red lighten-2">Delete {{item.name}}</button>
    </form>
  </div>
</div>
