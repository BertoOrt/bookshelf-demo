<h2>{{item.name}}</h2>

<form action="/{{route}}/edit/{{item.id}}" method="post">
  <input type="text" name="name" value="{{item.name}}" placeholder="New Name">
  <select name="id">
    {{#each list}}
      <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <button type="submit">Edit</button>
</form>
