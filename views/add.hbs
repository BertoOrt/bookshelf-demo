<nav class="orange darken-3">
  <a href="#" class="brand-logo">Add a {{title}}</a>
  <a href="#" data-activates="sideBar" class="button-collapse right"><i class="material-icons">menu</i></a>
</nav>
<div class="container">
  <div class="row">
    <form action="/{{route}}" method="post">
      <div class="input-field col s12">
        <input type="text" name="name" placeholer="name" required>
        <label> Name </label>
      </div>
      <div class="input-field col s12">
        <input type="url" name="image" placeholer="image url" required>
        <label> Image </label>
      </div>
      <div class="input-field col s12">
        <textarea class="materialize-textarea",id="bio" name="bio" rows="8" cols="40" required></textarea>
        <label for="bio"> Description </label>
      </div>
      <div class="input-field col s12">
        <input type="number" name="year" placeholer="year" required>
        <label> Year </label>
      </div>
      <button type="submit" class="btn orange accent-4">Add!</button>
    </form>
  </div>
</div>
